extends ../../layout/default

block sidebarMain
    //- Styling for the "/user" page Sidebar
    div(id="user-sb")
        //- User SideBar Title
        div(id="user-sb-title")
            if !alien
                h6(class="badge badge-warning") ERR: NO USER LOGGED IN
            else if !alien.userName
                h6(class="badge badge-warning") ERR: CREATE A USERNAME
            else
                h6(class="badge badge-success")= alien.userName
        div(id="user-sb-body")
            if !alien.googleId
                div(class="btn-group", role="group")
                    button(type="button", class="btn btn-surreal-danger")
                        i(class="fab fa-google-plus-g")
                    button(type="button", class="btn btn-surreal-warning")
                        a(href="/auth/google")
                            p Connect Google Account
block contentMain

    div(class="userMain")
        div(class="user-cm")
            div(class="user-cm-title")

            div(class="user-cm-body")

block panel1
    div(class="panel panel-default rounded invisible", id="panel-one")
        div(class="panelTitle")
        div(class="panelBody")

block panel2
    //- [Panel: User App Connections]
    div(class="panel panel-default rounded visible", id="panel-two")
        //- Panel: Title 
        div(class="panelTitle")
            h6(class="badge badge-success") Connected Apps
        //- Panel: Body (List of App Connections)
        div(class="panelBody")
            //- ...
            //- [Google+ User Connection]
            if !alien.googleId
                //- tests with btn-group
                div(class="btn-group", role="group")
                    i(class="fab fa-google-plus-g")
                    div(class="media-body")
            else
                div(class="media")
                    img(class="mr-3 panel-img rounded-left", src=alien.googleImg)
                    div(class="media-body rounded-right")
                        div(class="row")
                            div(class="col-6")
                                h6(class="mt-0 badge badge-success")= alien.googleName
                            div(class="col-6")
            //- ...
            //- [Spotify User Connection]
            if !alien.spotifyId
                //- display nothing (next)
            else
                div(class="media")
                    img(class="mr-3 panel-img", src=alien.spotifyImg)
                    div(class="media-body")
                        h6(class="mt-0 badge badge-success")= alien.spotifyName
            //- [SoundCloud User Connection]
            div(class="btn-group", role="group")
                //- change to img when api re-opens
                i(class="fa fa-exclamation-triangle")

